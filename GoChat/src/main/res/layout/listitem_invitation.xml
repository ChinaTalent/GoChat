<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@id/iv_new_friend_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:src="@drawable/default_icon_user"
        app:civ_border_color="@android:color/holo_orange_light"
        app:civ_border_width="1dp" />

    <Button
        android:id="@id/btn_new_friend_accept"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/action_btn_login_selector"
        android:text="接受"
        android:textColor="@color/white" />

    <TextView
        android:id="@id/tv_new_friend_accept"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="已添加"
        android:textColor="@color/text_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="55dp"
        android:orientation="vertical">

        <TextView
            android:id="@id/tv_new_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="asfdfsd"
            android:textColor="@color/text_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@id/tv_new_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="请求添加你为好友"
            android:textColor="@color/text_light"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>